<script>
let current=0;
let correct=0;
let negative=0;
let time=120*60;   // 120 minutes
let timer;

function startTimer(){
  timer=setInterval(()=>{
    let m=Math.floor(time/60);
    let s=time%60;
    document.getElementById("timer").innerHTML=
      "Time Left : "+m+" min "+s+" sec";
    time--;
    if(time<0){
      clearInterval(timer);
      submitTest();
    }
  },1000);
}

function showQuestion(){
  let q=questions[current];
  document.getElementById("qno").innerHTML=
    "Question "+(current+1)+" / "+questions.length;
  document.getElementById("qtext").innerHTML=q.q;

  let html="";
  q.o.forEach((op,i)=>{
    html+=`<button onclick="checkAnswer(${i})">${op}</button>`;
  });
  document.getElementById("options").innerHTML=html;
}

function checkAnswer(i){
  if(i===questions[current].a){
    correct++;
  }else{
    negative+=0.33;
  }
  current++;
  if(current<questions.length){
    showQuestion();
  }else{
    submitTest();
  }
}

function submitTest(){
  document.getElementById("test").style.display="none";
  document.getElementById("result").style.display="block";
  let score=(correct-negative).toFixed(2);
  document.getElementById("final").innerHTML=
    "Correct : "+correct+
    "<br>Negative Marks : "+negative.toFixed(2)+
    "<br><b>Final Score : "+score+"</b>";
}
</script>
</head>

<body onload="startTimer();showQuestion();">

<h1>RRB JE CBT-2 Civil Engineering – Mock Test</h1>
